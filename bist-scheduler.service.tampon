[Unit]
Description=BIST AI System Automated Data Pipeline Scheduler
After=network.target postgresql.service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/bist-pattern
ExecStart=/opt/bist-pattern/venv/bin/python /opt/bist-pattern/scheduler_daemon.py
Environment="TZ=Europe/Istanbul"
Environment="PYTHONPATH=/opt/bist-pattern"

# Restart policy
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
